<Window x:Class="Protes.Views.SecurityWarningWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="⚠️ Security Notice" Height="400" Width="550"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   Text="⚠️ Security Notice ⚠️"
                   FontWeight="Bold" 
                   FontSize="16" 
                   TextAlignment="Center" 
                   Margin="0,0,0,10"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" MaxHeight="220">
            <TextBlock TextWrapping="Wrap" FontSize="13">
                <Run FontWeight="Bold">⚠️ DISCLAIMER: Please read the following carefully</Run>
                <LineBreak/><LineBreak/>
                <Run>This feature is not a substitute for file encryption or system-level security.</Run>
                <LineBreak/>
                <Run>This feature is specific to the Protes application — </Run>
                <Run FontWeight="Bold">USE AT YOUR OWN RISK</Run>
                <Run>.</Run>
                <LineBreak/><LineBreak/>
                <Run FontWeight="Bold">How it works:</Run>
                <LineBreak/><Run>• This will not encrypt your data — the file itself is not protected.</Run>
                <LineBreak/><Run>• Uses SHA256 hashed password (one-way only — you can't view it).</Run>
                <LineBreak/><Run>• If you forget your password, you will not be able to recover it.</Run>
                <LineBreak/><Run>• Data can be recovered from the file using a database manager (it's not encrypted).</Run>
            </TextBlock>
        </ScrollViewer>

        <CheckBox x:Name="DontShowAgainCheckBox"
                  Grid.Row="2"
                  Content="Do not show this warning again (you can re-enable it in Settings)"
                  Margin="0,10,0,10"
                  IsChecked="False"/>

        <StackPanel Grid.Row="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,10,0,0">
            <Button Content="OK" 
                    Width="80" 
                    Margin="0,0,10,0" 
                    Click="OkButton_Click"/>
            <Button Content="Cancel" 
                    Width="80" 
                    IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>