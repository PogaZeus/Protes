<Window x:Class="Protes.Views.NoteEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Note" 
        Height="600" Width="800"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        FontFamily="Segoe UI">

    <DockPanel>
        <!-- Menu at the very top -->
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_Save" Click="SaveButton_Click" InputGestureText="Ctrl+S"/>
                <Separator/>
                <MenuItem Header="_Export As">
                    <MenuItem Header="Text File (*.txt)" Click="ExportAsTxt_Click"/>
                    <MenuItem Header="Markdown File (*.md)" Click="ExportAsMd_Click"/>
                    <MenuItem Header="CSV File (*.csv)" Click="ExportAsCsv_Click"/>
                </MenuItem>
            </MenuItem>
        </Menu>

        <!-- Main content -->
        <Grid Margin="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Title -->
                <RowDefinition Height="*"/>
                <!-- Content -->
                <RowDefinition Height="Auto"/>
                <!-- Tags + Buttons -->
            </Grid.RowDefinitions>

            <!-- Title -->
            <TextBox x:Name="TitleBox" Grid.Row="0" FontSize="16" FontWeight="Bold"
                     Padding="5" Margin="0,0,0,10" Text="Untitled"/>

            <!-- Content -->
            <TextBox x:Name="ContentBox" Grid.Row="1" AcceptsReturn="True"
                     AcceptsTab="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"
                     FontSize="13"/>

            <!-- Tags + Buttons -->
            <Grid Grid.Row="2" Margin="0,15,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Tags -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Tags:" Margin="0,0,5,0"/>
                    <TextBox x:Name="TagsBox" Width="200" Padding="3"/>
                </StackPanel>

                <!-- Buttons -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Save" Width="80" Margin="0,0,10,0" Click="SaveButton_Click"/>
                    <Button Content="Cancel" Width="80" Click="CancelButton_Click"/>
                </StackPanel>
            </Grid>
        </Grid>
    </DockPanel>
</Window>