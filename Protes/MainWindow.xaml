<Window x:Class="Protes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mr E Tools - Protes (A database note taker)" 
        WindowState="Maximized"
        FontFamily="Segoe UI" WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Menu -->
            <RowDefinition Height="Auto"/>
            <!-- Icon Tray -->
            <RowDefinition Height="Auto"/>
            <!-- New/Edit/Delete + Search -->
            <RowDefinition Height="*"/>
            <!-- Notes Table -->
            <RowDefinition Height="Auto"/>
            <!-- Status Bar -->
        </Grid.RowDefinitions>

        <!-- === MENU BAR === -->
        <Menu Grid.Row="0">
            <MenuItem Header="_File">
                <MenuItem Header="_Connect" Click="Connect_Click"/>
                <MenuItem Header="_Disconnect" Click="Disconnect_Click"/>
                <Separator/>
                <MenuItem Header="_Quit" Click="Quit_Click"/>
            </MenuItem>
            <MenuItem Header="_Options" Name="OptionsMenu">
                <MenuItem Header="Local Database" Click="UseLocalDb_Click" IsCheckable="True"/>
                <MenuItem Header="External Database" Click="UseExternalDb_Click" IsCheckable="True"/>
                <Separator/>
                <MenuItem Header="_Settings" Click="OpenSettings_Click"/>
            </MenuItem>
        </Menu>

        <!-- === ICON TRAY === -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="10,5"
                    HorizontalAlignment="Left" VerticalAlignment="Top">
            <Button x:Name="ConnectIconBtn" Content="🔌" FontSize="16" Width="32" Height="32"
                    ToolTip="Connect" Click="Connect_Click" Margin="0,0,8,0"/>
            <Button x:Name="DisconnectIconBtn" Content="🚫" FontSize="16" Width="32" Height="32"
                    ToolTip="Disconnect" Click="Disconnect_Click" Margin="0,0,16,0"/>
            <Button x:Name="SettingsIconBtn" Content="⚙️" FontSize="16" Width="32" Height="32"
                    ToolTip="Settings" Click="OpenSettings_Click"/>
        </StackPanel>

        <!-- === NEW NOTE + EDIT NOTE + DELETE NOTE + SEARCH === -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="10,10">
            <Button x:Name="NewNoteButton" Content="New Note" Padding="12,5"
                    FontSize="14" Click="NewNoteButton_Click" Margin="0,0,15,0"/>
            <Button x:Name="EditNoteButton" Content="Edit Note" Padding="12,5"
                    FontSize="14" Click="EditNoteButton_Click" Margin="0,0,15,0"/>
            <Button x:Name="DeleteNoteButton" Content="Delete Note" Padding="12,5"
                    FontSize="14" Click="DeleteNoteButton_Click" Margin="0,0,15,0"/>
            <TextBox x:Name="SearchBox" Width="300" Height="28"
                     VerticalContentAlignment="Center"
                     TextChanged="SearchBox_TextChanged"
                     VerticalAlignment="Center"/>
        </StackPanel>

        <!-- === NOTES TABLE (DATA GRID) === -->
        <DataGrid Grid.Row="3" x:Name="NotesDataGrid" Margin="10"
                  AutoGenerateColumns="False" IsReadOnly="True"
                  SelectionMode="Single" Visibility="Collapsed"
                  MouseDoubleClick="NotesDataGrid_MouseDoubleClick">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="2*"/>
                <DataGridTextColumn Header="Preview" Binding="{Binding Preview}" Width="3*"/>
                <DataGridTextColumn Header="Modified" Binding="{Binding LastModified}" Width="120"/>
                <DataGridTextColumn Header="Tags" Binding="{Binding Tags}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Optional: Placeholder when disconnected -->
        <TextBlock Grid.Row="3" x:Name="DisconnectedPlaceholder"
                   Text="Not connected to a database. Choose 'Local' or 'External Database' from Options."
                   HorizontalAlignment="Center" VerticalAlignment="Center"
                   FontSize="16" Foreground="Gray" TextWrapping="Wrap" Margin="20"/>

        <!-- === STATUS BAR === -->
        <StatusBar Grid.Row="4">
            <StatusBar.Items>
                <TextBlock x:Name="ConnectionStatusText" Text="Disconnected"/>
                <Separator Style="{StaticResource {x:Static StatusBar.SeparatorStyleKey}}" Margin="8,0"/>
                <TextBlock x:Name="DatabaseModeText" Text="—"/>
            </StatusBar.Items>
        </StatusBar>
    </Grid>
</Window>