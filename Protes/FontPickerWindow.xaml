<Window x:Class="Protes.Views.FontPickerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Choose Font" Height="200" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel>
            <TextBlock Text="Font:" Margin="0,0,0,5"/>
            <ComboBox x:Name="FontFamilyComboBox" ItemsSource="{Binding FontFamilies}"
                      SelectedItem="{Binding SelectedFontFamily}" Height="25"/>

            <TextBlock Text="Size:" Margin="0,10,0,5"/>
            <ComboBox x:Name="FontSizeComboBox" ItemsSource="{Binding FontSizes}"
                      SelectedItem="{Binding SelectedFontSize}" Height="25"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="OK" Click="OKButton_Click" Width="70" Margin="0,0,5,0"/>
            <Button Content="Cancel" Click="CancelButton_Click" Width="70"/>
        </StackPanel>
    </Grid>
</Window>