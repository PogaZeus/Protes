<Window x:Class="Protes.Views.GatePasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Database Password" 
        Width="320" Height="280"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        FontFamily="Segoe UI">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="InstructionText" Grid.Row="0" Text="Enter a password:" Margin="0,0,0,8"/>

        <!-- PasswordBox for input -->
        <PasswordBox x:Name="PasswordBox1" Grid.Row="1" Height="26" Margin="0,0,0,8"
             Visibility="Visible" Panel.ZIndex="2"/>
        <!-- TextBox to show password (initially hidden) -->
        <TextBox x:Name="PasswordText1" Grid.Row="1" Height="26" Margin="0,0,0,8"
         Visibility="Collapsed" IsReadOnly="True" Panel.ZIndex="1"/>

        <TextBlock x:Name="ConfirmText" Grid.Row="2" Text="Confirm password:" Margin="0,0,0,8" Visibility="Collapsed"/>

        <!-- PasswordBox for confirm -->
        <PasswordBox x:Name="PasswordBox2" Grid.Row="3" Height="26" Margin="0,0,0,8"
             Visibility="Visible" Panel.ZIndex="2"/>
        <!-- TextBox to show confirm password -->
        <TextBox x:Name="PasswordText2" Grid.Row="3" Height="26" Margin="0,0,0,8"
         Visibility="Collapsed" IsReadOnly="True" Panel.ZIndex="1"/>

        <CheckBox x:Name="ShowPasswordCheckBox" Grid.Row="4" Content="Show password" Margin="0,5"
                  Checked="OnShowPasswordChanged" Unchecked="OnShowPasswordChanged"/>

        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button x:Name="OkButton" Content="OK" Width="80" Margin="0,0,10,0" Click="OkButton_Click"/>
            <Button x:Name="CancelButton" Content="Cancel" Width="80" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>