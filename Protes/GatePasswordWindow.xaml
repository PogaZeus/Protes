<Window x:Class="Protes.Views.GatePasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Database Password" 
        Width="300"
        MinWidth="250"
        MinHeight="200"
        SizeToContent="Height"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        FontFamily="Segoe UI">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Database name -->
            <RowDefinition Height="Auto"/>
            <!-- Instruction -->
            <RowDefinition Height="Auto"/>
            <!-- Remove button -->
            <RowDefinition Height="Auto"/>
            <!-- New password -->
            <RowDefinition Height="Auto"/>
            <!-- Confirm label -->
            <RowDefinition Height="Auto"/>
            <!-- Confirm password -->
            <RowDefinition Height="Auto"/>
            <!-- Show password -->
            <RowDefinition Height="Auto"/>
            <!-- Buttons -->
        </Grid.RowDefinitions>

        <!-- Database name -->
        <TextBlock x:Name="DatabaseNameText" Grid.Row="0" Text="" FontWeight="Bold" Margin="0,0,0,5"
                   Visibility="Collapsed"/>


        <!-- Remove Password Button -->
        <Button x:Name="RemovePasswordButton" Grid.Row="1" Content="Remove Password" 
                HorizontalAlignment="Left" Padding="8,2"
                Click="RemovePasswordButton_Click" Margin="0,0,0,5"/>
        
        <!-- Instruction -->
        <TextBlock x:Name="InstructionText" Grid.Row="2" Text="Set a new password:" Margin="0,0,0,5"/>

        <!-- NEW PASSWORD -->
        <PasswordBox x:Name="PasswordBox1" Grid.Row="3" Height="26" Margin="0,0,0,5"
                     Visibility="Visible" Panel.ZIndex="2"/>
        <TextBox x:Name="PasswordText1" Grid.Row="3" Height="26" Margin="0,0,0,8"
                 Visibility="Collapsed" IsReadOnly="True" Panel.ZIndex="1"/>

        <!-- CONFIRM LABEL -->
        <TextBlock x:Name="ConfirmText" Grid.Row="4" Text="Confirm password:" Margin="0,0,0,2"/>

        <!-- CONFIRM PASSWORD -->
        <PasswordBox x:Name="PasswordBox2" Grid.Row="5" Height="26" Margin="0,0,0,5"
                     Visibility="Visible" Panel.ZIndex="2"/>
        <TextBox x:Name="PasswordText2" Grid.Row="5" Height="26" Margin="0,0,0,2"
                 Visibility="Collapsed" IsReadOnly="True" Panel.ZIndex="1"/>

        <!-- Show password checkbox -->
        <CheckBox x:Name="ShowPasswordCheckBox" Grid.Row="6" Content="Show passwords" Margin="0,5,0,5"
                  Checked="OnShowPasswordChanged" Unchecked="OnShowPasswordChanged"/>

        <!-- OK / Cancel -->
        <StackPanel Grid.Row="7" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,5,0,0">
            <Button x:Name="OkButton" Content="OK" Width="80" Padding="12,5" Margin="0,0,10,0" Click="OkButton_Click"/>
            <Button x:Name="CancelButton" Content="Cancel" Width="80" Padding="12,5" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>