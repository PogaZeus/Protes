<Window x:Class="Protes.CatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="[Protes] 🐾 Why Cats Are Object-Oriented Perfection 🐾"
        Height="550" 
        Width="750"
        MinHeight="540" 
        MinWidth="750"
        WindowStartupLocation="CenterOwner"
        Background="#F8FAFC"
        FontFamily="Segoe UI">

    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0 0 0 15">
            <TextBlock Text="Cats: Champions of the Digital Realm"
                       FontWeight="Bold"
                       FontSize="24"
                       Foreground="#0F172A"
                       TextAlignment="Center"/>
            <TextBlock Text="Because if they can sit on your keyboard, they basically own your code."
                       FontStyle="Italic"
                       FontSize="12"
                       Foreground="#475569"
                       TextAlignment="Center"/>
        </StackPanel>

        <!-- Scrollable Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>

                <Border Background="#F1F5F9" Padding="15" CornerRadius="8" Margin="0 0 0 20">
                    <StackPanel>
                        <TextBlock Text="✨ WHY CATS ARE THE BEST ✨"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Foreground="#0F172A"
                                   Margin="0 0 0 10"/>
                        <TextBlock TextWrapping="Wrap"
                                   FontSize="14"
                                   LineHeight="22"
                                   Foreground="#475569">
                            <Run Text="• Cats have built-in multitasking: sleep, judge you silently, and plan world domination — all at once."/><LineBreak/>
                            <Run Text="• They provide free quality assurance by knocking unstable objects off your desk."/><LineBreak/>
                            <Run Text="• When they sit on your keyboard, they aren't interrupting — they're optimizing."/><LineBreak/>
                            <Run Text="• Their purring increases developer productivity by 12% (Source: Definitely Not Fake Science Weekly)."/>
                        </TextBlock>
                    </StackPanel>
                </Border>

                <!-- Section: Cat Facts -->
                <Border Background="#E2E8F0" Padding="15" CornerRadius="8" Margin="0 0 0 20">
                    <StackPanel>
                        <TextBlock Text="📚 INTERESTING CAT FACTS"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Foreground="#0F172A"
                                   Margin="0 0 0 10"/>
                        <TextBlock TextWrapping="Wrap"
                                   FontSize="14"
                                   LineHeight="22"
                                   Foreground="#475569">
                            <Run Text="• A group of cats is called a “clowder,” which also sounds like a Linux distro."/><LineBreak/>
                            <Run Text="• Cats sleep up to 16 hours a day — a lifestyle most programmers deeply respect."/><LineBreak/>
                            <Run Text="• They can jump 6× their height, which is exactly how high your stress jumps when you deploy to production."/>
                        </TextBlock>
                    </StackPanel>
                </Border>

                <!-- Section: Jokes -->
                <Border Background="#dbeafe" Padding="15" CornerRadius="8" Margin="0 0 0 20">
                    <StackPanel>
                        <TextBlock Text="😹 CAT JOKES"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Foreground="#0F172A"
                                   Margin="0 0 0 10"/>
                        <TextBlock TextWrapping="Wrap"
                                   FontSize="14"
                                   LineHeight="22"
                                   Foreground="#475569">
                            <Run Text="Q: What do you call a cat who fixes computers?"/><LineBreak/>
                            <Run Text="A: A purr-ogrammer."/><LineBreak/><LineBreak/>
                            <Run Text="Q: What's a cat's favorite TV show?"/><LineBreak/>
                            <Run Text="A: The Evening Meows!"/><LineBreak/><LineBreak/>
                            <Run Text="Q: What’s a cat’s favorite coding language?"/><LineBreak/>
                            <Run Text="A: Scratch… followed closely by Meow-SQL."/><LineBreak/><LineBreak/>
                            <Run Text="Q: Why was the cat sitting on the computer?"/><LineBreak/>
                            <Run Text="A: It wanted to keep an eye on the mouse!"/><LineBreak/><LineBreak/>
                            <Run Text="Q: What's a cat's favorite dessert?"/><LineBreak/>
                            <Run Text="A: Mice-cream!"/><LineBreak/><LineBreak/>
                            <Run Text="Q: What's a cat's favorite subject in school?"/><LineBreak/>
                            <Run Text="A: Hiss-tory!"/><LineBreak/><LineBreak/>
                            <Run Text="Q: Why don't cats play poker in the jungle?"/><LineBreak/>
                            <Run Text="A: Too many cheetahs."/><LineBreak/><LineBreak/>
                            <Run Text="Q: What do you get when you cross a chick with an alley cat?"/><LineBreak/>
                            <Run Text="A: A peeping tom."/><LineBreak/><LineBreak/>
                            <Run Text="Q: Why was the cat called a developer?"/><LineBreak/>
                            <Run Text="A: Because it could see sharp! C#.. (ahh I wrote this one, lol!)"/><LineBreak/>
                        </TextBlock>
                    </StackPanel>
                </Border>

                <Border Background="#f0f9ff" Padding="15" CornerRadius="8" Margin="0 20 0 0">
                    <StackPanel>
                        <TextBlock Text="🧠 CAT RIDDLES (Click to Reveal Answers)"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Foreground="#0F172A"
                                   Margin="0 0 15 0"/>

                        <StackPanel Margin="0 0 0 15">
                            <TextBlock Text="Q: A group of kittens in a box, or a designated toilet for cats."
                                       FontSize="14"
                                       Foreground="#475569"
                                       TextWrapping="Wrap"/>
                            <Button Content="🔍 Reveal Answer"
                                    FontSize="12"
                                    Foreground="#0F172A"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    HorizontalAlignment="Left"
                                    Margin="0 5 0 0"
                                    Click="RevealRiddle1"/>
                            <TextBlock x:Name="Riddle1Answer"
                                       Text="A: A litter box."
                                       FontSize="14"
                                       Foreground="#475569"
                                       Visibility="Collapsed"
                                       TextWrapping="Wrap"/>
                        </StackPanel>

                        <StackPanel Margin="0 0 0 15">
                            <TextBlock Text="Q: I am what your cat tries to catch even though I don't exist"
                                       FontSize="14"
                                       Foreground="#475569"
                                       TextWrapping="Wrap"/>
                            <Button Content="🔍 Reveal Answer"
                                    FontSize="12"
                                    Foreground="#0F172A"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    HorizontalAlignment="Left"
                                    Margin="0 5 0 0"
                                    Click="RevealRiddle2"/>
                            <TextBlock x:Name="Riddle2Answer"
                                       Text="A: A laser pointer dot."
                                       FontSize="14"
                                       Foreground="#475569"
                                       Visibility="Collapsed"
                                       TextWrapping="Wrap"/>
                        </StackPanel>

                        <StackPanel>
                            <TextBlock Text="Q: Where is one place that your cat can sit, but you can't?"
                                       FontSize="14"
                                       Foreground="#475569"
                                       TextWrapping="Wrap"/>
                            <Button Content="🔍 Reveal Answer"
                                    FontSize="12"
                                    Foreground="#0F172A"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    HorizontalAlignment="Left"
                                    Margin="0 5 0 0"
                                    Click="RevealRiddle3"/>
                            <TextBlock x:Name="Riddle3Answer"
                                       Text="A: Your lap."
                                       FontSize="14"
                                       Foreground="#475569"
                                       Visibility="Collapsed"
                                       TextWrapping="Wrap"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <CheckBox Grid.Row="2"
                  x:Name="ShowCatButtonInToolbarCheckBox"
                  Content="Show 🐾 Cat Button in Main Toolbar"
                  FontSize="14"
                  FontWeight="SemiBold"
                  Foreground="#0F172A"
                  Margin="0 20 0 10"
                  HorizontalAlignment="Center"/>

        <Button Grid.Row="3"
                Content="Meow!"
                Width="120"
                Height="36"
                FontSize="15"
                BorderThickness="0"
                Background="#3B82F6"
                Padding="4"
                Foreground="#FFFFFF"
                FontWeight="Bold"
                HorizontalAlignment="Center"
                Click="MeowButton_Click"
                Margin="0 10 0 0"
                Cursor="Hand"/>
    </Grid>
</Window>
