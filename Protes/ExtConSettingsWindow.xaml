<Window x:Class="Protes.Views.ExtConSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="External Connection Settings"
        Width="350"
        Height="420"
        MinWidth="350"
        MinHeight="400"
        FontFamily="Segoe UI" 
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResizeWithGrip">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <!-- Name -->
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <!-- Host -->
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <!-- Port -->
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <!-- Database -->
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <!-- Username -->
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <!-- Password -->
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <!-- Buttons -->
            <RowDefinition Height="*"/>
            <!-- spacer -->
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Connection Name:" Grid.Row="0" Margin="0,0,0,2"/>
        <TextBox x:Name="NameTextBox" Grid.Row="1" Height="26" Margin="0,0,0,5"/>

        <TextBlock Text="Host:" Grid.Row="2" Margin="0,0,0,2"/>
        <TextBox x:Name="HostTextBox" Grid.Row="3" Height="26" Margin="0,0,0,5"/>

        <TextBlock Text="Port:" Grid.Row="4" Margin="0,0,0,2"/>
        <TextBox x:Name="PortTextBox" Grid.Row="5" Height="26" Margin="0,0,0,5"/>

        <TextBlock Text="Database:" Grid.Row="6" Margin="0,0,0,2"/>
        <TextBox x:Name="DatabaseTextBox" Grid.Row="7" Height="26" Margin="0,0,0,5"/>

        <TextBlock Text="Username:" Grid.Row="8" Margin="0,0,0,2"/>
        <TextBox x:Name="UsernameTextBox" Grid.Row="9" Height="26" Margin="0,0,0,5"/>

        <TextBlock Text="Password:" Grid.Row="10" Margin="0,0,0,2"/>
        <PasswordBox x:Name="PasswordBox" Grid.Row="11" Height="26" Margin="0,0,0,5"/>

        <StackPanel Grid.Row="13" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,5">
            <Button Content="Save" Width="80" Padding="12,5" Margin="0,0,5,0" Click="SaveButton_Click"/>
            <Button Content="Cancel" Width="80" Padding="12,5" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>