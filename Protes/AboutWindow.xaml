<Window x:Class="Protes.Views.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mr E Tools - [Protes] Pro Notes Database - About" 
        Height="510" Width="650"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        WindowStyle="SingleBorderWindow"
        Background="White">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Logo -->
        <Image Grid.Row="0" 
               Source="MrE_Clean.png" 
               Width="64" Height="64"
               HorizontalAlignment="Left"
               Margin="0,0,0,10"/>

        <!-- App Name -->
        <TextBlock Grid.Row="1"
                   Text="Tools - [Protes] Pro Notes Database"
                   FontSize="18"
                   FontWeight="Bold"
                   HorizontalAlignment="Left"
                   Margin="0,0,0,5"/>

        <!-- Tagline -->
        <TextBlock Grid.Row="2"
                   Text="A Note-Taking Application with Local &amp; External Database Support"
                   HorizontalAlignment="Left"
                   TextAlignment="Left"
                   Foreground="Gray"
                   Margin="0,0,0,8"/>

        <!-- Key Features Section -->
        <TextBlock Grid.Row="3"
                   Text="KEY FEATURES"
                   FontSize="12"
                   FontWeight="Bold"
                   FontFamily="Consolas"
                   Margin="0,0,0,5"/>

        <!-- Scrollable Content -->
        <ScrollViewer Grid.Row="4" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Features -->
                <TextBlock TextWrapping="Wrap" FontFamily="Consolas" FontSize="11" Margin="0,0,0,10">
                    <Run Text="• Store notes in SQLite Locally or connect to external MySQL 8.0+ databases"/>
                    <LineBreak/>
                    <Run Text="• Rich Note Management - Create, edit, search, and organize notes with tags and timestamps"/>
                    <LineBreak/>
                    <Run Text="• Flexible Import System - Import individual files or entire folder structures (.txt, .md, .csv)"/>
                    <LineBreak/>
                    <Run Text="• Advanced Export Options - Export as CSV (RFC 4180 compliant), Text files, or Markdown documents"/>
                    <LineBreak/>
                    <Run Text="• CSV Round-Trip Support - Export and re-import notes with full data integrity"/>
                    <LineBreak/>
                    <Run Text="• Batch Operations - Select multiple notes for bulk import/export with header checkbox selection"/>
                    <LineBreak/>
                    <Run Text="• Smart File Handling - Automatic filename sanitization and folder organization"/>
                    <LineBreak/>
                    <Run Text="• Real-time Progress - Status indicators and cancellation support for long-running operations"/>
                    <LineBreak/>
                    <Run Text="• Persistent Settings - User preferences retained across sessions"/>
                </TextBlock>

                <!-- Technical Details Section -->
                <TextBlock Text="TECHNICAL DETAILS"
                           FontSize="12"
                           FontWeight="Bold"
                           FontFamily="Consolas"
                           Margin="0,0,0,5"/>

                <TextBlock TextWrapping="Wrap" FontFamily="Consolas" FontSize="11">
                    <Run Text="• Local Storage: SQLite (v3+) via Entity Framework Core"/>
                    <LineBreak/>
                    <Run Text="• External Database: MySQL 8.0+ (connection pooling, SSL support)"/>
                    <LineBreak/>
                    <Run Text="• Platform: C# (.NET 8.0)"/>
                    <LineBreak/>
                    <Run Text="• UI Framework: Windows Presentation Foundation (WPF)"/>
                    <LineBreak/>
                    <Run Text="• Supplementary UI: Windows Forms (for folder/file dialogs)"/>
                    <LineBreak/>
                    <Run Text="• Data Access: Entity Framework Core + ADO.NET"/>
                    <LineBreak/>
                    <Run Text="• Architecture: MVVM-inspired with structured XAML design"/>
                    <LineBreak/>
                    <Run Text="• Export Formats: TXT, Markdown (.md), CSV (RFC 4180, UTF-8)"/>
                    <LineBreak/>
                    <Run Text="• CSV Parsing: Custom RFC 4180 compliant parser for reliable import"/>
                    <LineBreak/>
                    <Run Text="• Character Encoding: Full Unicode (UTF-8) support"/>
                </TextBlock>
            </StackPanel>
        </ScrollViewer>

        <!-- OK Button -->
        <Button Grid.Row="5"
                Content="Nice One!"
                Width="80"
                Height="26"
                HorizontalAlignment="Right"
                Margin="0,5,0,0"
                Click="OkButton_Click"/>
    </Grid>
</Window>