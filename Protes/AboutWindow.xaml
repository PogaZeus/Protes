<Window x:Class="Protes.Views.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mr E Tools - [Protes] Pro Notes Database - About" 
        Height="420" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        WindowStyle="SingleBorderWindow"
        Background="White">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Logo -->
        <Image Grid.Row="0" 
               Source="MrE_Clean.png" 
               Width="64" Height="64"
               HorizontalAlignment="Center"
               Margin="0,0,0,10"/>

        <!-- App Name -->
        <TextBlock Grid.Row="1"
                   Text="Mr E Tools - Pro Notes (Protes)"
                   FontSize="18"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,5"/>

        <!-- Tagline -->
        <TextBlock Grid.Row="2"
                   Text="A Note-Taking Application with Local &amp; External Database Support"
                   HorizontalAlignment="Center"
                   TextAlignment="Center"
                   Foreground="Gray"
                   Margin="0,0,0,15"/>

        <!-- Tech Details -->
        <ScrollViewer Grid.Row="3" VerticalScrollBarVisibility="Auto" MaxHeight="180">
            <TextBlock TextWrapping="Wrap" FontFamily="Consolas" FontSize="11">
                <Run Text="• Local Data Storage: SQLite (v3+) via Entity Framework Core"/>
                <LineBreak/>
                <Run Text="• External Database Support: MySQL 8.0+ (with connection pooling and SSL options)"/>
                <LineBreak/>
                <Run Text="• Written in C# (.NET 8.0)"/>
                <LineBreak/>
                <Run Text="• UI Framework: Windows Presentation Foundation (WPF)"/>
                <LineBreak/>
                <Run Text="• Supplementary UI Components: Windows Forms (Rarely!)"/>
                <LineBreak/>
                <Run Text="• Data Access: Entity Framework Core + ADO.NET (for flexibility)"/>
                <LineBreak/>
                <Run Text="• Architecture: MVVM-inspired with structured XAML design"/>
                <LineBreak/>
                <Run Text="• Export Formats: TXT, Markdown (.md), CSV (RFC 4180 compliant)"/>
                <LineBreak/>
                <Run Text="• Persistent Settings: User preferences retained across sessions"/>
            </TextBlock>
        </ScrollViewer>

        <!-- OK Button -->
        <Button Grid.Row="4"
                Content="OK"
                Width="80"
                Height="26"
                HorizontalAlignment="Center"
                Margin="0,15,0,0"
                Click="OkButton_Click"/>
    </Grid>
</Window>